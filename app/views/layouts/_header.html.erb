<header class="p-3 mb-3 border-bottom">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <%= link_to root_path do %>
          <%= image_tag("logo2.webp", width: 100) %>
        <% end %>
      

        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li>
            <%= link_to t('header.menu.recipes'), recipes_path, class: current_link_class(recipes_path) %>
          </li>
          <li>
            <%= link_to t('header.menu.advices'), advices_path, class: current_link_class(advices_path) %>
          </li>
          <li>
            <%= link_to t('header.menu.news'), news_path, class: current_link_class(news_path) %>
          </li>
          <li>
            <%= link_to t('header.menu.donate'), donate_path, class: current_link_class(donate_path) %>
          </li>
        </ul>

        <%- if user_signed_in? %>
          <div class="dropdown text-end">
            <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
              <img src="https://github.com/mdo.png" alt="mdo" width="32" height="32" class="rounded-circle">
            </a>
            <ul class="dropdown-menu text-small">
              <li><a class="dropdown-item" href="#"></a></li>
              <li>
                <%= link_to t('devise.button.new'), edit_user_registration_path, class: 'dropdown-item' %>
              </li>
              <li>  
                <%= link_to t('devise.account'), edit_user_registration_path, class: 'dropdown-item' %>
              </li>
              <li><hr class="dropdown-divider"></li>
              <li>
                <%= button_to t('devise.logout'), destroy_user_session_path, method: :delete, form: {turbolink: false}, class: "dropdown-item" %>
              </li>
            </ul>
          </div>
        <% else %>
          <div class="col-md-3 text-end">
            <%=link_to new_user_session_path do %>
              <button type="button" class="btn btn-outline-primary me-2">Увійти</button>
            <% end %>
            <%= link_to new_user_registration_path do %>
              <button type="button" class="btn btn-outline-primary">Зареєструватись</button>
            <% end %>
          </div>
        <% end %>
        
      </div>
    </div>
</header>